@page "/allstarfulls"

<PageTitle>Allstarfulls</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Allstarfulls" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@allstarfulls" TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="playerID" Title="player I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="yearID" Title="year I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="gameNum" Title="game Num">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="gameID" Title="game I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="teamID" Title="team I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="lgID" Title="lg I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="GP" Title="G P">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Property="startingPos" Title="starting Pos">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Allstarfull" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="allstarfull">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, allstarfull)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
