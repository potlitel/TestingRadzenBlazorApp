                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="playerID" Title="player I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="teamID" Title="team I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="lgID" Title="lg I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="G" Title="G">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="AB" Title="A B">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="R" Title="R">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Battingpost" Property="H" Title="H">
