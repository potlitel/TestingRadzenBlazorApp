@page "/managers"

<PageTitle>Managers</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Managers" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@managers" TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="managerID" Title="manager I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="yearID" Title="year I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="teamID" Title="team I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="lgID" Title="lg I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="inseason" Title="inseason">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="G" Title="G">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="W" Title="W">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="L" Title="L">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="rank" Title="rank">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Property="plyrMgr" Title="plyr Mgr">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TestingRadzenBlazorApp.Models.Baseball.Manager" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="manager">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, manager)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
